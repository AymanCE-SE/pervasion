/* Auth Pages - Enhanced Theme Styling */
.auth-page {
  padding: 6rem 0;
  min-height: 100vh;
  display: flex;
  align-items: center;
  background: var(--bg-primary-light);
  position: relative;
  overflow: hidden;
}

/* Improved gradient overlay */
.auth-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--sandstone-gradient-light);
  opacity: 0.08;
  z-index: 0;
}

.auth-page.dark-mode {
  background: var(--bg-primary-dark);
}

.auth-page.dark-mode::before {
  background: var(--main-dark-gradient);
  opacity: 0.12;
}

/* Enhanced card styling */
.auth-card {
  background: var(--bg-primary-light);
  border-radius: var(--radius-xl);
  box-shadow: 0 15px 35px rgba(47,62,73,0.06), 0 30px 60px rgba(47,62,73,0.05);
  padding: 2rem;
  max-width: 450px;
  width: 100%;
  margin: 0 auto;
  position: relative;
  z-index: 1;
  transition: transform var(--transition-normal), box-shadow var(--transition-normal);
}

.auth-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(47,62,73,0.1), 0 40px 80px rgba(47,62,73,0.08);
}

.auth-card.dark-mode {
  background: rgba(28, 38, 48, 0.95);
  box-shadow: 0 15px 35px var(--shadow-dark);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.auth-title {
  font-weight: 800;
  margin-bottom: 0.5rem;
  font-size: 2.2rem;
  background: var(--main-gradient);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -0.5px;
}

.dark-mode .auth-title {
  background: var(--primary-dark-gradient);
  -webkit-background-clip: text;
  background-clip: text;
}

.auth-subtitle {
  color: var(--text-secondary-light);
  margin-bottom: 0;
  font-size: 1.1rem;
  font-weight: 500;
}

.dark-mode .auth-subtitle {
  color: var(--text-secondary-dark);
}



@keyframes pulse {
  0% { transform: scale(1); box-shadow: 0 6px 18px rgba(47,62,73,0.06); }
  50% { transform: scale(1.05); box-shadow: 0 8px 25px rgba(79, 176, 168, 0.2); }
  100% { transform: scale(1); box-shadow: 0 6px 18px rgba(47,62,73,0.06); }
}

.form-label {
  font-weight: 600;
  font-size: 0.95rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary-light);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-label svg {
  color: var(--main);
  font-size: 1.1rem;
  transition: color var(--transition-normal);
}

.dark-mode .form-label {
  color: var(--text-primary-dark);
}

.dark-mode .form-label svg {
  color: var(--main-light);
}

.input-group-text{
  border-radius: var(--radius-lg);
  border: 1px solid rgba(16,24,32,0.06);
  background: var(--bg-primary-light);
  color: var(--text-primary-light);
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.6);
  transition: all var(--transition-normal);

}
.dark-mode .input-group-text {
  background: var(--bg-secondary-dark);
  border-color: var(--border-dark);
  color: var(--text-primary-dark);
}

.form-control {
  padding: 0.85rem 1.2rem;
  border-radius: var(--radius-lg);
  border: 1px solid rgba(16,24,32,0.06);
  transition: all var(--transition-normal);
  font-size: 1rem;
  background: var(--bg-primary-light);
  color: var(--text-primary-light);
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.6);
}

.form-control::placeholder {
  color: var(--text-secondary-light);
  font-size: 0.95rem;
}

.dark-mode .form-control {
  background: var(--bg-secondary-dark);
  border-color: var(--border-dark);
  color: var(--text-primary-dark);
}

.dark-mode .form-control::placeholder {
  color: var(--text-secondary-dark);
}

.form-control:focus {
  box-shadow: 0 6px 20px rgba(79,176,168,0.12);
  border-color: rgba(79,176,168,0.9);
  outline: none;
}

.dark-mode .form-control:focus {
  box-shadow: 0 0 0 3px var(--overlay-dark);
  border-color: var(--main-light);
}

.auth-btn {
  padding: 1rem 1.5rem;
  border-radius: var(--radius-lg);
  font-weight: 700;
  background: var(--primary-gradient) ;
  border: none;
  box-shadow: 0 4px 15px var(--shadow-light) ;
  transition: all var(--transition-normal) ;
  transition-property: transform, box-shadow, background, filter;
  font-size: 1.05rem;
  letter-spacing: 0.5px;
  color: white;
  position: relative;
  overflow: hidden;
  z-index: 1;  /* Add z-index to establish stacking context */
}

.auth-btn span {
  position: relative;
  z-index: 2;  /* Place text above the pseudo-element */
}

.auth-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--main-dark-gradient);
  opacity: 0;
  transition: opacity var(--transition-normal);
  z-index: 1;  /* Place below the text but above the base button */
}

.auth-btn:hover:not(:disabled) {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(47,62,73,0.08);
  filter: brightness(1.02);
  color: #fff;
}

.auth-btn:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: 0 4px 10px var(--shadow-light) ;
  filter: brightness(0.95);

.auth-btn:hover:not(:disabled)::before {
  opacity: 1;
}

.auth-btn:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: 0 4px 10px var(--shadow-light) ;
}

.auth-btn:disabled:hover {
  background: var(--main-gradient) ;
  opacity: 0.7;
  cursor: not-allowed;
  box-shadow: none ;
  color: var(--text-secondary-light) ;
}

/* Accessible focus ring */
.auth-btn:focus-visible {
  outline: none;
  box-shadow: 0 0 0 4px var(--overlay-light);
}

/* Dark mode button visuals */
.dark-mode .auth-btn {
  background: var(--primary-dark-gradient);
  color: #fff;
}

.dark-mode .auth-btn::before {
  background: var(--primary-dark-gradient);
  opacity: 0;
}

.dark-mode .auth-btn:hover:not(:disabled) {
  box-shadow: 0 10px 30px var(--shadow-dark);
  filter: brightness(1.06);
  color: #fff;
}

.dark-mode .auth-btn:focus-visible {
  outline: none;
  box-shadow: 0 0 0 4px var(--overlay-dark);
}

.auth-link {
  color: var(--text-secondary-light);
  margin-top: 1rem;
  font-size: 0.95rem;
}

.auth-link a {
  color: var(--main);
  font-weight: 600;
  position: relative;
}

.auth-link a::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 100%;
  height: 2px;
  background: var(--main-gradient);
  transform: scaleX(0);
  transition: transform var(--transition-normal);
}

.auth-link a:hover::after {
  transform: scaleX(1);
}

.dark-mode .auth-link {
  color: var(--text-secondary-dark);
}

/* Error message styling */
.error-details {
  background: rgba(220, 53, 69, 0.1);
  border: 1px solid rgba(220, 53, 69, 0.2);
  border-radius: var(--radius-lg);
  padding: 1rem;
  margin: 1rem 0;
  color: #dc3545;
  font-size: 0.9rem;
  line-height: 1.4;
}

.error-message {
  color: #dc3545;
  font-size: 0.85rem;
  margin-top: 0.5rem;
  font-weight: 500;
}

.dark-mode .error-details {
  background: rgba(220, 53, 69, 0.15);
  border-color: rgba(220, 53, 69, 0.3);
  color: #ff6b7a;
}

.dark-mode .error-message {
  color: #ff6b7a;
}

.dark-mode .auth-link a {
  color: var(--main-light);
}

.dark-mode .auth-link a::after {
  background: var(--primary-dark-gradient);
}

/* Guest/Continue Button */
.guest-button {
  padding: 0.75rem 1.25rem;
  border-radius: var(--radius-lg);
  font-weight: 500;
  background: transparent;
  border: 2px solid var(--border-light);
  color: var(--text-secondary-light);
  transition: all var(--transition-normal);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.guest-button:hover {
  background: var(--bg-secondary-light);
  border-color: var(--main);
  color: var(--main);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(79,176,168,0.15);
}

.dark-mode .guest-button {
  background: transparent;
  border-color: var(--border-dark);
  color: var(--text-secondary-dark);
}

.dark-mode .guest-button:hover {
  background: var(--bg-secondary-dark);
  border-color: var(--main-light);
  color: var(--main-light);
  box-shadow: 0 4px 12px rgba(79,176,168,0.2);
}

.dark-mode .auth-link a:hover {
  color: var(--main);
}

.alert {
  border-radius: var(--radius-lg);
  padding: 1.25rem;
  margin-bottom: 1.5rem;
}

.alert-danger {
  background-color: rgba(220, 53, 69, 0.08);
  border: 1px solid rgba(220, 53, 69, 0.15);
  color: #dc3545;
}

.dark-mode .alert-danger {
  background-color: rgba(220, 53, 69, 0.12);
  border: 1px solid rgba(220, 53, 69, 0.2);
  color: #f8a5ad;
}

.alert-success {
  background-color: rgba(40, 167, 69, 0.08);
  border: 1px solid rgba(40, 167, 69, 0.15);
  color: #28a745;
}

.dark-mode .alert-success {
  background-color: rgba(40, 167, 69, 0.12);
  border: 1px solid rgba(40, 167, 69, 0.2);
  color: #34ce57;
}

.auth-icon {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 90px;
  height: 90px;
  border-radius: 50%;
  background: red !important; /* Test background */
  color: #fff;
  margin-bottom: 1.5rem;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6px 18px rgba(47,62,73,0.06);
  animation: pulse 2s infinite;
  border: 5px solid yellow !important; /* Test border */
}

.auth-icon > * {
  position: relative;
  z-index: 2;
}

.dark-mode .auth-icon {
  background: var(--main-dark-gradient);
}

/* Icon gradient styling */
.icon-gradient {
  background: var(--main-gradient);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  filter: brightness(1.1);
}

.dark-mode .icon-gradient {
  background: var(--primary-dark-gradient);
  -webkit-background-clip: text;
  background-clip: text;
  filter: brightness(1.2);
}

/* Enhanced responsive design */
@media (max-width: 1199.98px) {
  /* Large tablets and small laptops */
  .auth-card {
    margin: 0 1.5rem;
  }

  .form-control {
    padding: 0.8rem 1.1rem;
    font-size: 0.95rem;
  }

  .input-group-text {
    padding: 0.8rem 1rem;
  }
}

@media (max-width: 991.98px) {
  /* Tablets */
  .auth-page {
    padding: 4rem 0;
  }

  .auth-card {
    margin: 0 1rem;
    padding: 1.5rem;
  }

  .auth-title {
    font-size: clamp(1.8rem, 4vw, 2rem);
  }

  .auth-subtitle {
    font-size: 0.95rem;
  }

  .form-label {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .form-control {
    padding: 0.75rem 1rem;
    font-size: 0.95rem;
  }

  .input-group-text {
    padding: 0.75rem 0.9rem;
  }

  .input-group-text svg {
    font-size: 0.9rem;
  }

  .auth-btn {
    padding: 0.9rem 1.4rem;
    font-size: 1rem;
  }
}

@media (max-width: 767.98px) {
  /* Mobile landscape */
  .auth-page {
    padding: 3rem 0;
  }

  .auth-card {
    margin: 0 1rem;
    padding: 1.5rem;
  }

  .auth-title {
    font-size: clamp(1.6rem, 5vw, 1.8rem);
  }

  .auth-subtitle {
    font-size: 0.9rem;
  }

  .auth-icon {
    width: 70px;
    height: 70px;
  }

  .auth-icon svg {
    font-size: 1.8rem;
  }

  .form-label {
    font-size: 0.85rem;
  }

  .form-control {
    padding: 0.7rem 0.9rem;
    font-size: 0.9rem;
  }

  .input-group-text {
    padding: 0.7rem 0.8rem;
  }

  .input-group-text svg {
    font-size: 0.85rem;
  }

  .auth-btn {
    padding: 0.85rem 1.25rem;
    font-size: 0.95rem;
  }

  .auth-link {
    font-size: 0.9rem;
  }
}

@media (max-width: 575.98px) {
  /* Mobile portrait */
  .auth-page {
    padding: 2rem 0;
  }

  .auth-card {
    margin: 0 0.75rem;
    padding: 1.25rem;
  }

  .auth-title {
    font-size: clamp(1.4rem, 6vw, 1.6rem);
  }

  .auth-subtitle {
    font-size: 0.85rem;
  }

  .auth-icon {
    width: 60px;
    height: 60px;
    margin-bottom: 1rem;
  }

  .auth-icon svg {
    font-size: 1.5rem;
  }

  .form-label {
    font-size: 0.8rem;
    margin-bottom: 0.4rem;
  }

  .form-control {
    padding: 0.65rem 0.8rem;
    font-size: 0.85rem;
  }

  .input-group-text {
    padding: 0.65rem 0.75rem;
  }

  .input-group-text svg {
    font-size: 0.8rem;
  }

  .auth-btn {
    padding: 0.8rem 1rem;
    font-size: 0.9rem;
  }

  .auth-link {
    font-size: 0.85rem;
  }

  .alert {
    padding: 1rem;
    font-size: 0.85rem;
  }
}

@media (max-width: 480px) {
  /* Small mobile */
  .auth-card {
    margin: 0 0.5rem;
    padding: 1rem;
  }

  .auth-title {
    font-size: 1.3rem;
  }

  .form-control {
    padding: 0.6rem 0.75rem;
    font-size: 0.8rem;
  }

  .input-group-text {
    padding: 0.6rem 0.7rem;
  }

  .auth-btn {
    padding: 0.75rem 0.9rem;
    font-size: 0.85rem;
  }
}

/* Fluid typography for better scaling */
.auth-title {
  font-size: clamp(1.8rem, 4vw, 2.2rem);
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.auth-subtitle {
  font-size: clamp(0.9rem, 2vw, 1rem);
  opacity: 0.8;
}

/* Better input field scaling for single column */
.form-control {
  padding: clamp(0.8rem, 2.5vw, 1.1rem) clamp(1rem, 3vw, 1.4rem);
  font-size: clamp(0.95rem, 2.2vw, 1.1rem);
  border-radius: var(--radius-lg);
  transition: all var(--transition-normal);
  min-height: 48px; /* Better touch targets */
}

.input-group-text {
  padding: clamp(0.8rem, 2.5vw, 1.1rem) clamp(0.9rem, 2.5vw, 1.3rem);
  font-size: clamp(0.95rem, 2.2vw, 1.1rem);
  border-radius: var(--radius-lg);
  min-width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-group-text svg {
  font-size: clamp(0.9rem, 2vw, 1.05rem);
}

/* Enhanced form group spacing for single column */
.mb-3 {
  margin-bottom: 1rem !important;
}

.mb-lg-4 {
  margin-bottom: 1.5rem !important;
}

@media (min-width: 992px) {
  .mb-lg-4 {
    margin-bottom: 2rem !important;
  }
}

/* Better visual separation between form sections */
.form-group + .form-group {
  position: relative;
}

.form-group + .form-group::before {
  content: '';
  position: absolute;
  top: -0.5rem;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--border-light), transparent);
  opacity: 0.3;
}

.dark-mode .form-group + .form-group::before {
  background: linear-gradient(90deg, transparent, var(--border-dark), transparent);
}

/* Form labels */
.form-label {
  font-size: clamp(0.85rem, 1.5vw, 1rem);
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--text-primary-light);
}

.dark-mode .form-label {
  color: var(--text-primary-dark);
}

/* Button scaling */
.auth-btn {
  padding: clamp(0.9rem, 2vw, 1.1rem) clamp(1.4rem, 3vw, 1.8rem);
  font-size: clamp(1rem, 2vw, 1.1rem);
  border-radius: var(--radius-lg);
  font-weight: 600;
}

/* Extra large screens */
@media (min-width: 1400px) {
  .auth-card {
    padding: 3rem;
  }

  .auth-title {
    font-size: 2.2rem;
  }

  .form-control {
    padding: 1rem 1.3rem;
    font-size: 1.1rem;
  }

  .input-group-text {
    padding: 1rem 1.2rem;
  }

  .auth-btn {
    padding: 1.1rem 1.8rem;
    font-size: 1.1rem;
  }
}

/* Dark mode specific enhancements */
.dark-mode .form-control {
  background: var(--bg-secondary-dark);
  border-color: var(--border-dark);
  color: var(--text-primary-dark);
}

.dark-mode .form-control:focus {
  background: var(--bg-secondary-dark);
  border-color: var(--main-light);
  box-shadow: 0 0 0 3px rgba(79, 176, 168, 0.15);
}}