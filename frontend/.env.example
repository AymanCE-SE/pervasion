# API Configuration
# Development
# VITE_API_URL=http://localhost:8000/api

# Production
VITE_API_URL=https://www.pervasionsa.com/api

# Application
VITE_APP_NAME=Pervasion
VITE_APP_DESCRIPTION=Pervasion Construction Company Portfolio

# i18n
VITE_DEFAULT_LANGUAGE=en
VITE_FALLBACK_LANGUAGE=ar

# Features
VITE_ENABLE_ANALYTICS=true
VITE_GOOGLE_ANALYTICS_ID=YOUR_GA_ID

# Authentication
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token

# Environment
NODE_ENV=production

# Base URL - important for routing in production
VITE_BASE_URL=/
