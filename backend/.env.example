# Database Configuration
# For PostgreSQL (production)
DATABASE_URL=postgres://user:password@localhost:5432/pervasion

# For individual database settings (legacy)
DATABASE_NAME=pervasion
DATABASE_USER=pervasion
DATABASE_PASSWORD=your_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Django Secret Key
SECRET_KEY=django-insecure-replace-this-with-a-secure-key

# Debug Settings
DEBUG=True

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Settings
JWT_SECRET_KEY=jwt-secret-key-replace-this-in-production
JWT_ACCESS_TOKEN_LIFETIME=5 # in minutes
JWT_REFRESH_TOKEN_LIFETIME=1 # in days
