# Database Configuration
# For PostgreSQL (production)
DATABASE_URL=postgres://user:password@localhost:5432/pervasion

# For individual database settings (legacy)
DATABASE_NAME=pervasion
DATABASE_USER=pervasion
DATABASE_PASSWORD=your_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Django Secret Key - MUST be set in production
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=generate-a-secure-key-for-production

# Environment Settings
# Set to False in production
DEBUG=False

# Allowed Hosts
# For production, include your domain
ALLOWED_HOSTS=pervasionsa.com,www.pervasionsa.com

# CORS Settings
# For production, only allow your domain
CORS_ALLOWED_ORIGINS=https://pervasionsa.com,https://www.pervasionsa.com

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Frontend URL for email verification and links
FRONTEND_URL=https://www.pervasionsa.com

# JWT Settings
JWT_SECRET_KEY=jwt-secret-key-replace-this-in-production
JWT_ACCESS_TOKEN_LIFETIME=30 # in minutes
JWT_REFRESH_TOKEN_LIFETIME=1 # in days
